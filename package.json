{
  "name": "@safidea/app",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "lint": "prettier --write .",
    "build": "bun build src/index.ts --outdir dist --target node --external @safidea_/engine && cp node_modules/@safidea_/engine/schemas/app.schema.json public/schemas",
    "build:test": "bun build src/test.ts --outdir dist --target node --external @safidea_/engine",
    "watch": "bun build src/index.ts --outdir dist --target node --external @safidea_/engine --watch",
    "dev": "concurrently \"nodemon dist/index.js\" \"npm run watch\"",
    "pretest": "bun run build:test",
    "test": "node dist/test.js",
    "start": "node dist/index.js",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/fs-extra": "^11.0.4",
    "concurrently": "^8.2.2",
    "husky": "^9.1.3",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3"
  },
  "peerDependencies": {
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@safidea_/engine": "^0.18.3",
    "dotenv": "^16.4.5",
    "fs-extra": "^11.2.0"
  },
  "engines": {
    "bun": "1.1.21",
    "node": "20.15.1",
    "npm": "10.7.0"
  }
}
