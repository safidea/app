{
  "name": "@safidea/website",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "build": "bun build index.ts --outdir dist --target node --external @safidea_/engine",
    "watch": "bun build index.ts --outdir dist --target node --external @safidea_/engine --watch",
    "dev": "concurrently \"nodemon dist/index.js\" \"npm run watch\"",
    "start": "node dist/index.js"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.3",
    "prettier": "^3.3.1"
  },
  "peerDependencies": {
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@safidea_/engine": "^0.8.1",
    "dotenv": "^16.4.5"
  },
  "engines": {
    "bun": "1.1.12",
    "node": "20.11.1",
    "npm": "10.2.4"
  }
}
